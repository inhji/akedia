<h1 class="heading">User Settings</h1>

<ul>
  <li><strong>Username:</strong> <%= @user.username %></li>
  <li><strong>Password</strong> <%= elem(String.split_at(@user.encrypted_password, 20), 0)  %>..</li>
  <li><strong>Email: </strong> <%= @user.email %></li></li>
</ul>

<%= link "Edit", to: Routes.user_path(@conn, :edit, @user), class: "button is-text" %>
