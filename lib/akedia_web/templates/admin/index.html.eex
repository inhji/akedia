<div class="box">
  <div class="level is-mobile">
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Posts</p>
        <p class="title">
          <%= link @posts, to: Routes.post_path(@conn, :index), class: "title" %> <i class="fas fa-file-alt"></i>          
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Tags</p>
        <p class="title">
          <%= link @tags, to: Routes.tag_path(@conn, :index), class: "title" %> <i class="fas fa-tag"></i>
        </p>
      </div>
    </div>
  </div>

  <div class="level is-mobile">
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Articles</p>
        <p class="title">
          <%= link @articles, to: Routes.post_path(@conn, :by_type, "article"), class: "title" %> <i class="fas fa-pen-nib"></i>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Notes</p>
        <p class="title">
          <%= link @notes, to: Routes.post_path(@conn, :by_type, "note"), class: "title" %> <i class="fas fa-sticky-note"></i>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Replies</p>
        <p class="title">
          <%= link @replies, to: Routes.post_path(@conn, :by_type, "reply"), class: "title" %> <i class="fas fa-comment"></i>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Bookmarks</p>
        <p class="title">
          <%= link @bookmarks, to: Routes.post_path(@conn, :by_type, "bookmark"), class: "title" %> <i class="fas fa-bookmark"></i>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Likes</p>
        <p class="title">
          <%= link @likes, to: Routes.post_path(@conn, :by_type, "like"), class: "title" %> <i class="fas fa-heart"></i>
        </p>
      </div>
    </div>
  </div>

</div>
